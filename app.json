{
  "name": "WATSON-XMD",
  "description": "I am WATSON-XMD WhatsApp MultiDevice Bot built in NodeJs to enhance the experience.",
  "logo": "https://raw.githubusercontent.com/watson-xd3/WATSON-DATA/refs/heads/main/logo/watson.png",
  "keywords": ["WATSON-XMD"],
  "repository": "https://github.com/watson-xd3/WATSON-XMD",
  "stack": "container",
  "env": { 
      "SESSION_ID": {
      "description": "your session id",
      "required": true,
      "value": ""
    },
    "MODE": {
      "description": "mode public or self",
      "required": true,
      "value": "public"
    },
    "ANTI_DELETE": {
      "description": "make it true for use anti delete",
      "required": true,
      "value": "true"
    },
    "AUTO_STATUS_SEEN": {
      "description": "make it true if you want bot to view status",
      "required": false,
      "value": "true"
    },
    "AUTO_STATUS_REPLY": {
      "description": "make it true if you want to send message after seen status",
      "required": false,
      "value": "false"
    },
    "STATUS_READ_MSG": {
      "description": "set your status reply message",
      "required": false,
      "value": "*Status Seen By Watson-Ai ðŸ‘»*"
    },
    "OWNER_NAME": {
      "description": "set your status reply message",
      "required": false,
      "value": "WATSON-FOURPENCE"
    },
    "OWNER_NUMBER": {
      "description": "set your status reply message",
      "required": false,
      "value": "263789622747"
    },
    "AUTO_READ": {
      "description": "make it true if you want bot to read message",
      "required": false,
      "value": "false"
    },
    "AUTO_TYPING": {
      "description": "make it true if you want bot to show typing",
      "required": false,
      "value": "false"
    },
    "AUTO_RECORDING": {
      "description": "make it true if you want bot to show recording audio",
      "required": false,
      "value": "false"
    },
    "ALWAYS_ONLINE": {
      "description": "make it true if you want bot to show always online",
      "required": false,
      "value": "false"
    },
    "AUTO_BLOCK": {
      "description": "make it true if you want bot to auto block only 212 numbers",
      "required": false,
      "value": "false"
    },
    "REJECT_CALL": {
      "description": "make it true if you want to reject call",
      "required": false,
      "value": "false"
    },
    "PREFIX": {
      "description": "Your Bot Prefix default (.)",
      "required": false,
      "value": "."
    }
    },
    "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
}

